<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ZATCA API Suite">
	 <test name="Test Accepted Standard Invoices">
		<classes>
			<class name="stc.zatca.tests.OnboardingTests">
				<methods>
					<include name="testCSIDStandardAcceptedInvoice" />
				</methods>
			</class>
			<class name="stc.zatca.tests.ClearanceReportingTests">
				<methods>
					<include name="testAcceptedClearanceInvoice" />
				</methods>
			</class>
		</classes>
	</test>

	  <test name="Test Accepted Simplified Invoices">
		<classes>
			<class name="stc.zatca.tests.OnboardingTests">
				<methods>
					<include name="testCSIDSimplifiedAcceptedInvoice" />
				</methods>
			</class>
			<class name="stc.zatca.tests.ClearanceReportingTests">
				<methods>
					<include name="testAcceptedReportingInvoice" />
				</methods>
			</class>
		</classes>
	</test> 
	
	<test name="Test Warning Standard Invoices">
		<classes>
			<class name="stc.zatca.tests.OnboardingTests">
				<methods>
					<include name="testCSIDStandardWarningInvoice" />
				</methods>
			</class>
			<class name="stc.zatca.tests.ClearanceReportingTests">
				<methods>
					<include name="testWarningClearanceInvoice" />
				</methods>
			</class>
		</classes>
	</test>
	
     <test name="Test Warning Simplified Invoices">
		<classes>
			<class name="stc.zatca.tests.OnboardingTests">
				<methods>
					<include name="testCSIDSimplifiedWarningInvoice" />
				</methods>
			</class>
			<class name="stc.zatca.tests.ClearanceReportingTests">
				<methods>
					<include name="testWarningReportingInvoice" />
				</methods>
			</class>
		</classes>
	</test> 
</suite>
